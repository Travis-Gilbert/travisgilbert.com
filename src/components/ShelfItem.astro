---
import TagList from './TagList.astro';

interface Props {
  title: string;
  creator: string;
  type: string;
  annotation: string;
  url?: string;
  tags: string[];
}

const { title, creator, type, annotation, url, tags } = Astro.props;

const typeColors: Record<string, string> = {
  book: 'bg-terracotta/10 text-terracotta',
  video: 'bg-gold/20 text-ink',
  podcast: 'bg-rough-light/20 text-ink',
  article: 'bg-code text-ink-secondary',
  tool: 'bg-ink/5 text-ink',
  album: 'bg-gold/10 text-ink',
  other: 'bg-code text-ink-secondary',
};
---

<div class="border border-border rounded-xl bg-surface p-5 transition-shadow hover:shadow-md">
  <div class="flex flex-col gap-2">
    <div class="flex items-start justify-between gap-2">
      <div>
        <h3 class="text-base font-title font-bold m-0">
          {url ? (
            <a href={url} target="_blank" rel="noopener noreferrer" class="hover:text-terracotta">
              {title} <span class="text-xs">&#8599;</span>
            </a>
          ) : (
            title
          )}
        </h3>
        <p class="text-sm text-ink-secondary m-0 font-mono">{creator}</p>
      </div>
      <span class={`inline-block text-xs font-mono px-2 py-0.5 rounded whitespace-nowrap ${typeColors[type] || typeColors.other}`}>
        {type}
      </span>
    </div>
    <p class="text-sm text-ink-secondary m-0">{annotation}</p>
    <TagList tags={tags} />
  </div>
</div>
