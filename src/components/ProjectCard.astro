---
import TagList from './TagList.astro';
import ArrowSquareOutThin from 'phosphor-astro/ArrowSquareOutThin.astro';

interface ProjectUrl {
  label: string;
  url: string;
}

interface Props {
  title: string;
  role: string;
  description: string;
  year: number;
  urls: ProjectUrl[];
  tags: string[];
}

const { title, role, description, year, urls, tags } = Astro.props;
---

<div class="border border-border rounded-xl bg-surface p-5 transition-shadow hover:shadow-md">
  <div class="flex flex-col gap-2">
    <div>
      <h3 class="text-lg font-title font-bold m-0">{title}</h3>
      <p class="text-sm text-ink-secondary m-0 font-mono">{role} &middot; {year}</p>
    </div>
    <p class="text-sm text-ink-secondary m-0">{description}</p>
    {urls.length > 0 && (
      <div class="flex flex-wrap gap-3 mt-1">
        {urls.map((link) => (
          <a
            href={link.url}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-1 font-mono text-xs text-terracotta hover:text-terracotta-hover no-underline"
          >
            {link.label}
            <ArrowSquareOutThin class="w-3 h-3" />
          </a>
        ))}
      </div>
    )}
    <div class="pt-1">
      <TagList tags={tags} />
    </div>
  </div>
</div>
