---
import MagnifyingGlassThin from 'phosphor-astro/MagnifyingGlassThin.astro';
import NotePencilThin from 'phosphor-astro/NotePencilThin.astro';
import WrenchThin from 'phosphor-astro/WrenchThin.astro';
import BookOpenThin from 'phosphor-astro/BookOpenThin.astro';
import BriefcaseThin from 'phosphor-astro/BriefcaseThin.astro';
import InfoThin from 'phosphor-astro/InfoThin.astro';
import ChatCircleThin from 'phosphor-astro/ChatCircleThin.astro';

interface Props {
  name: string;
  class?: string;
}

const { name, class: className = 'w-4 h-4' } = Astro.props;
---

{name === 'investigations' && <MagnifyingGlassThin class={className} />}
{name === 'field-notes' && <NotePencilThin class={className} />}
{name === 'toolkit' && <WrenchThin class={className} />}
{name === 'shelf' && <BookOpenThin class={className} />}
{name === 'projects' && <BriefcaseThin class={className} />}
{name === 'colophon' && <InfoThin class={className} />}
{name === 'connect' && <ChatCircleThin class={className} />}
